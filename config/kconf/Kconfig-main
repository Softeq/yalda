mainmenu "Yalda configuration"

config YALDA_DEBUG
  bool "debug"
  help
    Enable debug log prints

choice YALDA_ARCH
  prompt "Target"
  help
    Target architecture

config YALDA_ARCH_X86_64
  bool "x86_64"

config YALDA_ARCH_ARM
  bool "arm"

endchoice

config YALDA_CROSS_COMPILE
  string "CROSS_COMPILE"
  depends on YALDA_ARCH_ARM
  default "arm-linux-gnueabihf-" if YALDA_ARCH_ARM
  help
    Cross compilation toolchain

source config/kconf/Kconfig-build
source config/kconf/Kconfig-run

#source config/kconf/Kconfig-kernel
#source config/kconf/Kconfig-busybox
#source config/kconf/Kconfig-whistle
#source config/kconf/Kconfig-rootfs
#source config/kconf/Kconfig-run


